---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  currentPath: string;
  intro?: string;
}

const { title, currentPath, intro } = Astro.props as Props;
---

<BaseLayout currentPath={currentPath} title={title}>
  <section class="hero">
    <h1>{title}</h1>
    {intro ? <p>{intro}</p> : null}
  </section>
  <article class="section doc-content">
    <slot />
  </article>
</BaseLayout>
